<MudCard Outlined="true">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@HeaderTitle</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        @if (IsFileLoaded)
        {
            <Chart Config="@ChartConfig" Width="100" Height="40"></Chart>
        }
        else
        {
            <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">Nessun file caricato!</MudText>
        }
    </MudCardContent>
</MudCard>
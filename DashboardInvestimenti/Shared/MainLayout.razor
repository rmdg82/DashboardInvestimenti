@inherits LayoutComponentBase

<MudThemeProvider Theme = "Theme1"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="2" Color="Color.Primary">
        <MudText Typo="Typo.h4" >Dashboard investimenti Gimme 5</MudText>
        <MudSpacer />
        <MudTooltip Text="Open in a new tab">
            <MudIconButton Icon="@Icons.Material.Filled.AddCircle" Size="Size.Large" Color="Color.Inherit" Link="/" Target="_blank"></MudIconButton>
        </MudTooltip>
        <MudTooltip Text="MudBlazor">
            <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Link="https://mudblazor.com/" Target="_blank"></MudIconButton>
        </MudTooltip>
        <MudTooltip Text="Github">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/rmdg82/DashboardInvestimenti" Target="_blank"></MudIconButton>
        </MudTooltip>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code{
    MudTheme Theme1 = new MudTheme
        {
            Palette = new Palette
            {
                Primary = Colors.Red.Darken4,
                Secondary = Colors.Blue.Default
            }
        };
}

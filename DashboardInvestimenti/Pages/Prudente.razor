                }
                else
                {
                    <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">Nessun file caricato!</MudText>
                }
            </MudCardContent>
        </MudCard>*@
    <CustomChart HeaderTitle="Andamento valore quote:"
                 Labels="PeriodoTemporale"
                 ChartValues="ValoreQuote" @on/>
    <MudCard Outlined="true">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">
                    Andamento valore investimento: @_guadagno
                </MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            @if (_isFileLoaded)
            {
                <Chart Config="_config2" Width="100" Height="40"></Chart>
            }
            else
            {
                <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">Nessun file caricato!</MudText>
            }
        </MudCardContent>
    </MudCard>
</MudContainer>